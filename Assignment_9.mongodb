// Read Operations
db.students.find().pretty() ; 
db.students.find( { 
    "city": "Pune"
} ); 

// find with logical operators and projection
db.students.find( 
    {
        $and: [
            { "insem_marks": { $gt: 120 } } , 
            { "endsem_marks": { $lt: 150 } }
        ]
    } , 
    { "name": 1 , "year": 1 } // Projection
) ;


// Update Operations
db.students.updateOne(
    { "age": 22 } , 
    { 
        $set: {
            "year": "BE"
        }
    }
) ; 


