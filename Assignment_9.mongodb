db.students.countDocuments() ;
// Count based on collection metadata
db.students.estimatedDocumentCount() ; 


// Logical Operators
// $and, $or, $not, $nor
db.students.find( {
    $and: [
        { "year": "TE" } ,
        { "city" : "Pune" } , 
    ]
} ) ;

// CEarison Operators
// $eq, $gt, $lt, $lte, $gte, $ne
db.students.find( {
    "insem_marks": { 
        $gt: 120
    }
} ) ; 
db.students.find( {
    "scores.jee": {
        $gt: 95.0
    }
} ) ;

// Membership operators
// $in
db.students.find( { 
    "year": {
        $in: [ "BE" , "TE "]
    }
} ) ; 

// Array Operators
// $size, $all
db.students.find( {
    "technologies" : {
        $size: 4
    }
}) ; 